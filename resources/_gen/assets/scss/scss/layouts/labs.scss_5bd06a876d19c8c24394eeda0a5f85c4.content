.labs .labs-grid .row-3{display:grid;grid-template-columns:1fr 1fr 1fr;grid-column-gap:30px;grid-row-gap:20px}@media screen and (max-width:900px){.labs .labs-grid .row-3{grid-template-columns:1fr 1fr}}@media screen and (max-width:520px){.labs .labs-grid .row-3{grid-template-columns:1fr}}.labs .content{max-width:700px}.labs .content .excerpt{font-weight:300;font-size:24px}.labs .content ul,.labs .content ol{font-weight:300;font-size:19px;line-height:1.6;padding-left:40px;-webkit-margin-before:1em;margin-block-start:1em;-webkit-margin-after:1em;margin-block-end:1em}.labs .content p,.labs .content li{line-height:1.6;word-spacing:.05em;color:#343a40;font-weight:400;font-size:16px}.labs .content strong{font-weight:600}.labs .content h1{margin-top:20px}.labs .content h4{font-size:22px;font-weight:700}.labs .content h3{font-size:26px;font-weight:700}.labs .content h5{font-weight:300;font-size:24px}.labs .card{display:flex;position:relative;overflow:hidden;flex-direction:column;height:400px}.labs .card:hover{cursor:pointer}.labs .card:hover .image{transform:translateY(0px)}.labs .card .image{background-size:cover;display:block;width:100%;height:50%;position:absolute;transform:translateY(50px);align-self:flex-end;transition:transform 1s;bottom:0}.labs .card .description{align-self:flex-start;justify-self:flex-start;margin-bottom:auto;padding:40px 0 15px 20px;max-width:90%}.labs .card h3{font-weight:900;font-size:36px;line-height:1.2}.labs .card a{text-decoration:none;left:0;right:0;top:0;bottom:0;position:absolute;width:100%;height:100%}